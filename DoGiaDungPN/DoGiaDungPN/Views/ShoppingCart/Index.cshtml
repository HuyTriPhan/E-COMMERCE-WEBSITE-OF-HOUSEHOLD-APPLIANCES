@model ShoppingCart
<!DOCTYPE html>
<html>
<head>
    <title>Your Cart</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        th, td {
            text-align: left;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>

    <h2>Giỏ hàng</h2>
    <table>
        <tr>
            <th>Tên</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng tiền</th>
            <th>Chức năng</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </table>
    <form asp-action="Checkout" method="get">
        <button class="btn btn-primary">Thanh toán</button>
    </form>
    <form asp-controller="Momo" asp-action="Index" method="get">
        <button class="btn btn-primary">Momo</button>
    </form>
</body>
</html>